<%= stylesheet_link_tag '/form.scss' %>

<div class="login-container">
  <div class="header-left">
    <%= link_to :back, class: "waves-effect waves-light login-btn" do %>
      <i class="material-icons left">arrow_back</i>Back
    <% end %>
  </div>
  <div class="login-form edit-form z-depth-3">
    <h3 class="text-black-dark text-bold">Login</h3><br />
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <!--
      <%# if devise_mapping.rememberable? %>
        <div class="field">
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me, class: "label" %>
        </div>
      <%# end %>
      -->

      <div class="actions">
        <%= f.submit "Log in", class: "submit_btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <br />
    <br />
  </div>
</div
