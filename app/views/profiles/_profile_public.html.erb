<div class="public section one"> 
  <div class="card-container">
    <div class="card">
      <div class="card-content text-space-sm">
        <div class="avatar">
          <%= image_tag('avatar-4.jpg', :class => 'materialboxed') %>
        </div>

        <% if !@chef.nil? %>
          <span class="card-title text-black-dark text-bold">Chef <%= [@chef.user.first_name, @chef.user.last_name].join(' ') %></span>
          <p class="card-details text-black-light text-italic">
            <i class="material-icons left">location_on</i> <%= [@chef.city, @chef.region].join(', ') %>
          </p>
          <p class="card-details text-black-light"><i class="material-icons left">phone</i> <%= @chef.contact_number %></p>
        <% elsif !@client.nil? %>
          <span class="card-title text-black-dark text-bold"><%= [@client.user.first_name, @client.user.last_name].join(' ') %></span>
          <p class="card-details text-black-light text-italic">
            <i class="material-icons left">location_on</i> <%= [@client.city, @client.region].join(', ') %>
          </p>
          <p class="card-details text-black-light"><i class="material-icons left">phone</i> <%= @client.contact_number %></p>
        <% end %>

        <div class="rating-container text-yellow-dark">
          <% @rating = 4.5 %>
          <% if @rating >= 3 %>
            <% case @rating %>
            <% when 3 %>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star_border</i>
              <i class="material-icons">star_border</i>
            <% when 3.5 %>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star_half</i>
              <i class="material-icons">star_border</i>
            <% when 4 %>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star_border</i>
            <% when 4.5 %>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star_half</i>
            <% when 5 %>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
              <i class="material-icons">star</i>
            <% end %>
            
          <% end %>
        </div>
        
        <% unless @chef.nil? %>
          <% unless @chef.bio.nil? %>
            <div class="divider"></div>

            <div class="bio-container">
              <p class="card-details text-black-light text-italic"> <%= @chef.bio.truncate(100) %> </p>
            </div>
          <% end %>
        <% end %>

      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <div class="card-action">
        <% if !@chef.nil? %>
          <% if current_user.user_type == 'Client' %>
            <%= link_to(new_client_request_path(current_user.client.id, chef_id: @chef.id), class: "waves-effect waves-light btn-large btn-green") do %>
              Book Chef <i class="material-icons right">event</i>
            <% end %>
          <% end %>
          <%= link_to(chefs_path, class: "waves-effect waves-light btn-large btn-red") do %>
            Report <i class="material-icons right">block</i>
          <% end %>
        <% elsif !@client.nil? %>
          <% if current_user.user_type == 'Chef' %>
            <%= link_to(chefs_path, class: "waves-effect waves-light btn-large btn-green") do %>
              Rate <i class="material-icons right">rate_review</i>
            <% end %>
          <% end %>
          <%= link_to(new_client_report_path(@client.id), class: "waves-effect waves-light btn-large btn-red") do %>
            Report <i class="material-icons right">block</i>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
